<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NowMineClient.ViewModels.QueuePage">
    <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackLayout x:Name="sltQueue" Orientation="Vertical" VerticalOptions="FillAndExpand" Grid.Row="0" Margin="10"/>
            <Button Text="Dawaj Dalej" x:Name="BtnPlayNext" Grid.Row="1" HeightRequest="60" IsVisible="False" Clicked="BtnPlayNext_Clicked"/>
        </Grid>
    </ScrollView>
</ContentPage>